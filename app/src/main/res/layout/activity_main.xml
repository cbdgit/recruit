<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/iv_bg_compressed"
                android:layout_height="match_parent"
               >

    <!--1. 中间可滑动的viewPager-->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

    </android.support.v4.view.ViewPager>

    <!--2. 底部的三个图标按钮-->


    <!--3. viewPager的指示器-->
    <!--注意！！此处指示器的高度，需要跟DragLayout协商好(card_extra_height)-->

    <!--4. 顶部的titleBar-->
    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--沉浸式activity，这个view是用来占位的-->

        <View
            android:id="@+id/position_view"
            android:layout_width="1px"
            android:layout_height="1px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">



            <TextView
                android:background="@drawable/iv_title"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff" />



        </RelativeLayout>

        <include layout="@layout/view_bubble" />

    </LinearLayout>

    <Button
        android:id="@+id/iv_baoming"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/recrument"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/btn_bg_recrument"
        />

</RelativeLayout>